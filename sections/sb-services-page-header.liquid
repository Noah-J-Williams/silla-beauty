{% style %}

  .sb-services-page__header {
    background: rgb(var(--color-background));
    width: 100%;
  }

  .sb-services-page__header-inner {
    padding: 72px 0 44px;
  }

  @media screen and (min-width: 750px) {
    .sb-services-page__header-inner {
      padding: 96px 0 56px;
    }
  }

  .sb-services-page__header-title {
    margin: 0;
    font-size: clamp(4.2rem, 8vw, 9.6rem);
    line-height: 0.95;
    letter-spacing: -0.03em;
    text-transform: none;
  }

  .sb-services-page__header-subheading {
    margin: 16px 0 0;
    max-width: 52rem;
    font-size: 1.5rem;
    line-height: 1.5;
    color: rgba(var(--color-foreground), 0.72);
  }

  .sb-services-page__divider {
    height: 1px;
    background: rgba(var(--color-foreground), 0.18);
    margin-top: 28px;
  }
{% endstyle %}

<section class="sb-section sb-services-page-header">
  <div class="sb-services-page__header">
    <div class="page-width sb-services-page__header-inner">
      {% if section.settings.heading != blank %}
        <h1 class="sb-services-page__header-title">{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="sb-services-page__header-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      <div class="sb-services-page__divider"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SB Services Page Header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Services"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Tailored treatments for skin, body, and beauty."
    }
  ],
  "presets": [
    {
      "name": "SB Services Page Header"
    }
  ]
}
{% endschema %}
