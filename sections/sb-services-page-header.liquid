{% style %}

  .sb-services-page__header {
    background: linear-gradient(135deg, #f7f2ec 0%, #efe4da 45%, #e4d3c8 100%);
    border-bottom: 1px solid var(--sb-border);
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
  }

  .sb-services-page__header-inner {
    padding: 48px 0 36px;
    position: relative;
    z-index: 1;
  }

  @media screen and (min-width: 750px) {
    .sb-services-page__header-inner {
      padding: 64px 0 48px;
    }
  }

  .sb-services-page__header-illustration {
    position: absolute;
    inset: 0;
    opacity: 1;
    pointer-events: none;
    width: 100%;
    height: 100%;
  }

  .sb-services-page__header-illustration svg {
    width: 100%;
    height: 100%;
  }

  .sb-services-page__divider {
    height: 1px;
    background: var(--sb-divider);
    margin-top: 24px;
  }
{% endstyle %}

