{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .sb-services-page__header {
    background: #f6f3ef;
    position: relative;
    overflow: hidden;
  }

  .sb-services-page__header-inner {
    padding: 48px 0 36px;
    position: relative;
    z-index: 1;
  }

  @media screen and (min-width: 750px) {
    .sb-services-page__header-inner {
      padding: 64px 0 48px;
    }
  }

  .sb-services-page__header-illustration {
    position: absolute;
    inset: 0;
    opacity: 0.25;
    pointer-events: none;
  }

  .sb-services-page__header-illustration svg {
    width: 100%;
    height: 100%;
  }

  .sb-services-page__divider {
    height: 1px;
    background: rgba(30, 30, 30, 0.2);
    margin-top: 24px;
  }
{% endstyle %}

<section class="sb-section sb-services-page-header section-{{ section.id }}-padding">
  <div class="sb-services-page__header">
    <div class="sb-services-page__header-illustration" aria-hidden="true">
      <svg viewBox="0 0 1200 200" preserveAspectRatio="none" focusable="false">
        <path d="M0 120 C 240 60, 360 180, 600 120 C 840 60, 960 180, 1200 120" fill="none" stroke="#4b463e" stroke-width="2" stroke-linecap="round" />
        <path d="M0 160 C 240 100, 360 220, 600 160 C 840 100, 960 220, 1200 160" fill="none" stroke="#4b463e" stroke-width="1" stroke-linecap="round" />
      </svg>
    </div>
    <div class="page-width sb-services-page__header-inner">
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="sb-muted">{{ section.settings.subheading }}</p>
      {% endif %}
      <div class="sb-services-page__divider"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SB Services Page Header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Services"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Clinical skin, body, and adornment treatments. Personalized to your goals, delivered with intention."
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "SB Services Page Header"
    }
  ]
}
{% endschema %}
