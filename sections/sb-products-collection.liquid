{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<section class="sb-section sb-products-collection color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="sb-muted">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="sb-products-collection__items">
      {% if section.settings.collection != blank and section.settings.collection.products.size > 0 %}
        {% assign lazy_load = false %}
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          {% if lazy_load == false and forloop.index > 2 %}
            {% assign lazy_load = true %}
          {% endif %}
          <div class="sb-products-collection__item">
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: 'default',
              lazy_load: lazy_load,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: false,
              show_rating: false,
              skip_styles: false
            %}
            <a class="sb-products-collection__cta" href="{{ product.url }}">Shop Now</a>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          {%- assign placeholder_image = 'product-apparel-' | append: forloop.index -%}
          <div class="sb-products-collection__item">
            {% render 'card-product',
              show_vendor: false,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: 'default',
              lazy_load: false,
              placeholder_image: placeholder_image
            %}
            <a class="sb-products-collection__cta" href="{{ routes.all_products_collection_url }}">Shop Now</a>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    {% if section.settings.show_view_all and section.settings.collection != blank %}
      <div class="center" style="margin-top: 2rem;">
        <a class="button" href="{{ section.settings.collection.url }}">{{ section.settings.view_all_label }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "SB Products Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": ""
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to show",
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        }
      ],
      "default": "adapt"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show secondary image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View all label",
      "default": "View all products"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "SB Products Collection"
    }
  ]
}
{% endschema %}
