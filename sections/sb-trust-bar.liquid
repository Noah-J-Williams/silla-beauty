{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<section class="sb-section sb-trust-bar color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="sb-trust-bar__items">
      {% for block in section.blocks %}
        <div class="sb-trust-bar__item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="sb-trust-bar__icon">
              {{ block.settings.icon | image_url: width: 64 | image_tag: loading: 'lazy', alt: block.settings.icon.alt | escape }}
            </div>
          {% endif %}
          <div>
            <strong>{{ block.settings.title }}</strong>
            {% if block.settings.text != blank %}
              <div class="sb-muted">{{ block.settings.text }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SB Trust Bar",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Trust item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Thoughtful consultations"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Care plans tailored to your goals"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "SB Trust Bar",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
