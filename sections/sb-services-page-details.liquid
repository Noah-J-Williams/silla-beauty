{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .sb-services-page__details {
    display: grid;
    gap: 72px;
    margin-top: 80px;
  }

  @media screen and (min-width: 990px) {
    .sb-services-page__details {
      gap: 96px;
    }
  }

  .sb-services-page__detail {
    display: grid;
    gap: 32px;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .sb-services-page__detail {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .sb-services-page__detail--reverse .sb-services-page__detail-media {
      order: 2;
    }
  }

  .sb-services-page__detail-media img,
  .sb-services-page__detail-media svg {
    width: 100%;
    border-radius: calc(var(--sb-radius) + 6px);
    display: block;
    box-shadow: var(--sb-shadow);
  }

  .sb-services-page__detail-text {
    background: var(--sb-surface);
    border-radius: var(--sb-radius);
    border: 1px solid var(--sb-border);
    padding: clamp(1.6rem, 2vw, 2.8rem);
    box-shadow: var(--sb-shadow);
  }

  .sb-services-page__detail-text h2 {
    margin-top: 0;
    margin-bottom: 1rem;
  }
{% endstyle %}

<section class="sb-section sb-services-page-details section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="sb-services-page__details">
      {% for block in section.blocks %}
        {% assign detail_index_modulo = forloop.index0 | modulo: 2 %}
        <div id="{{ block.settings.anchor_id }}" class="sb-services-page__detail{% if detail_index_modulo == 1 %} sb-services-page__detail--reverse{% endif %}" {{ block.shopify_attributes }}>
          <div class="sb-services-page__detail-media">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: block.settings.image.alt | escape }}
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder' }}
            {% endif %}
          </div>
          <div class="sb-services-page__detail-text">
            <h2>{{ block.settings.heading }}</h2>
            {% if block.settings.text != blank %}
              <div class="sb-muted rte">{{ block.settings.text }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SB Services Page Details",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "detail",
      "name": "Service detail",
      "settings": [
        {
          "type": "text",
          "id": "anchor_id",
          "label": "Anchor ID",
          "default": "microneedling"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Microneedling"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Targeted collagen induction to soften texture, tighten pores, and restore luminosity. Ideal for refining scars, tone, and overall skin resilience.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SB Services Page Details",
      "blocks": [
        {
          "type": "detail"
        }
      ]
    }
  ]
}
{% endschema %}
