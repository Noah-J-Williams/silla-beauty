      <defs>
        <linearGradient id="gradient" x1="49%" y1="0%" x2="51%" y2="100%">
          <stop offset="5%" stop-color="#a88b72"></stop>
          <stop offset="95%" stop-color="#e5dbd1"></stop>
        </linearGradient>
      </defs>
      <path d="M 0,700 L 0,356 C 71.39712918660285,390.26794258373207 142.7942583732057,424.53588516746413 237,393 C 331.2057416267943,361.46411483253587 448.22009569377997,264.1244019138756 557,225 C 665.77990430622,185.8755980861244 766.3253588516747,204.9665071770335 877,184 C 987.6746411483253,163.0334928229665 1108.4784688995217,102.00956937799043 1204,74 C 1299.5215311004783,45.99043062200957 1369.7607655502393,50.995215311004785 1440,56 L 1440,700 L 0,700 Z" stroke="none" stroke-width="0" fill="url(#gradient)" fill-opacity="0.4" class="transition-all duration-300 ease-in-out delay-150 path-0"></path>
      <defs>
        <linearGradient id="gradient" x1="49%" y1="0%" x2="51%" y2="100%">
          <stop offset="5%" stop-color="#a88b72"></stop>
          <stop offset="95%" stop-color="#e5dbd1"></stop>
        </linearGradient>
      </defs>
      <path d="M 0,700 L 0,531 C 99.8468899521531,509.88995215311 199.6937799043062,488.7799043062201 304,481 C 408.3062200956938,473.2200956937799 517.0717703349283,478.77033492822966 615,474 C 712.9282296650717,469.22966507177034 800.0191387559806,454.1387559808612 874,412 C 947.9808612440194,369.8612440191388 1008.8516746411485,300.67464114832535 1101,266 C 1193.1483253588515,231.32535885167465 1316.5741626794256,231.16267942583733 1440,231 L 1440,700 L 0,700 Z" stroke="none" stroke-width="0" fill="url(#gradient)" fill-opacity="0.53" class="transition-all duration-300 ease-in-out delay-150 path-1"></path>
      <defs>
        <linearGradient id="gradient" x1="49%" y1="0%" x2="51%" y2="100%">
          <stop offset="5%" stop-color="#a88b72"></stop>
          <stop offset="95%" stop-color="#e5dbd1"></stop>
        </linearGradient>
      </defs>
      <path d="M 0,700 L 0,706 C 66.50717703349281,699.2153110047847 133.01435406698562,692.4306220095693 237,686 C 340.9856459330144,679.5693779904307 482.4497607655502,673.4928229665072 592,638 C 701.5502392344498,602.5071770334928 779.1866028708135,537.598086124402 870,499 C 960.8133971291865,460.40191387559804 1064.8038277511962,448.11483253588517 1162,437 C 1259.1961722488038,425.88516746411483 1349.598086124402,415.9425837320574 1440,406 L 1440,700 L 0,700 Z" stroke="none" stroke-width="0" fill="url(#gradient)" fill-opacity="1" class="transition-all duration-300 ease-in-out delay-150 path-2"></path>
    </svg>
  </div>
  <div class="page-width">
    <div class="sb-hero-horizon__grid sb-align-{{ section.settings.content_alignment }}">
      <div class="sb-hero-horizon__content">
        {% if section.settings.badge_text != blank %}
          <span class="sb-pill">{{ section.settings.badge_text }}</span>
        {% endif %}

        {% if section.settings.heading != blank %}
          <div class="sb-hero-horizon__heading rte">{{ section.settings.heading }}</div>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="sb-hero-horizon__subheading">{{ section.settings.subheading }}</p>
        {% endif %}

        <div class="sb-hero-horizon__actions">
          {% if section.settings.primary_label != blank %}
            <a class="button" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
          {% endif %}
          {% if section.settings.secondary_label != blank %}
            <a class="button button--secondary" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
          {% endif %}
        </div>

        {% if section.blocks.size > 0 %}
          <ul class="sb-hero-horizon__trust">
            {% for block in section.blocks %}
              <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <div class="sb-hero-horizon__media">
        {% if section.settings.hero_image != blank %}
          <picture>
            {% if section.settings.hero_image_mobile != blank %}
              <source media="(max-width: 749px)" srcset="{{ section.settings.hero_image_mobile | image_url: width: 900 }}">
            {% endif %}
            {{ section.settings.hero_image | image_url: width: 1400 | image_tag: class: 'sb-hero-horizon__image', loading: 'lazy', alt: section.settings.hero_image.alt | escape }}
          </picture>
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'sb-hero-horizon__image placeholder' }}
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SB Hero Horizon",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Clinical Aesthetics<br><em>for glowing skin</em></p>"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Experience advanced skincare and beauty treatments tailored for radiant results."
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "null"
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Book Appointment"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "null"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image"
    },
    {
      "type": "image_picker",
      "id": "hero_image_mobile",
      "label": "Hero image (mobile)"
    },
    {
      "type": "checkbox",
      "id": "overlay_gradient",
      "label": "Enable overlay gradient",
      "default": true
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "bullet",
      "name": "Trust bullet",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Licensed estheticians Â· Calm, private suites"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "SB Hero Horizon",
      "blocks": [
        {
          "type": "bullet"
        },
        {
          "type": "bullet"
        }
      ]
    }
  ]
}
{% endschema %}
